alias k=kubectl
alias kcf='kubectl create -f'
alias kg='kubectl get'
alias ke='kubectl exec'
alias mk=minikube
alias kcd='kubectl config set-context $(kubectl config current-context) --namespace'
k8s_activate() {
    kubectl config use-context $1
}
alias weave-vz=""" kubectl port-forward -n weave "$(kubectl get -n weave pod --selector=weave-scope-component=app -o jsonpath='{.items..metadata.name}')" 4040 """
